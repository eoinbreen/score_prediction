<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <div class="user_header">
        <% if logged_in? %>
          Logged in as <%= current_user.name %>
        <% else%>
          Please log in to make a prediction
        <% end %>
      </div>
      
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home",   root_path %></li>
          <li><%= link_to "Game",   game_path %></li>
          <li><%= link_to "Leaderboard",   leaderboard_path %></li>
          <% if logged_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Update Profile","#", data: {toggle: "modal", target: "#update"} %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Log out", logout_path, method: "delete" %></li>
                </ul>
              </li>
          <% else%>
              <li><button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal">Sign Up/ Sign In</button></li>
          <% end %>
          
        </ul>
      </nav>
    </div>
  </header>
  <%= render 'layouts/modal' %>
  <%= render 'layouts/update' %>
  
  